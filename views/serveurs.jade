extends layout_main

block content
	container.col-md-8

		h2 Les serveurs accessibles

		table.table.table-hover.table-bordered
			thead
				tr
					th #
					th Nom
					th Adresse
					th DateTime
			- var cpt = 1
			each item in data
				tr
					td #{cpt++}
					td #{item.author}
					td 
						a(href=item.ip, target='_blank') #{item.ip}
					td #{item.ctime}

		br
		h2 Ajoute ton serveur :

		div
			p Faites attention à respecter toutes les règles d'acceptation de votre serveur !

			form(name="addServer", method="post")
				div.input
					input(type="text", name="author", placeholder="Quel est votre nom ?").form-control
				br
				div.input
					input(type="text", name="ip", placeholder="Entrez l'adresse de votre serveur (ip:port)").form-control
				br
				div.actions
					input(type="submit", value="Ajouter le serveur").btn.btn-success
